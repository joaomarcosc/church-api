{
    "name": "church-api",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "start": "node build/index.js",
        "build": "tsup src --out-dir build",
        "kysely": "kysely",
        "kysely:codegen": "kysely-codegen --dialect postgres --camel-case",
        "migrate:create": "kysely migrate:make",
        "migrate:rollback": "kysely migrate:rollback --all",
        "migrate:run": "kysely migrate:latest",
        "seed:create": "kysely seed:make",
        "seed:run": "kysely seed:run",
        "test:create-kysely-environment": "npm link ./vitest-environment-kysely",
        "test:install-kysely-environment": "npm link vitest-environment-kysely",
        "test": "vitest run --dir src/use-cases/",
        "test:watch": "vitest --dir src/use-cases",
        "pretest:e2e": "run-s test:create-kysely-environment test:install-kysely-environment",
        "test:e2e": "vitest run --dir src/http/controller",
        "test:coverage": "vitest run --coverage",
        "test:ui": "vitest --ui",
        "lint": "npx @biomejs/biome lint ./src",
        "typecheck": "tsc --noEmit"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@fastify/cookie": "^9.4.0",
        "@fastify/jwt": "^8.0.1",
        "bcrypt": "^5.1.1",
        "dotenv": "^16.4.5",
        "fastify": "^4.28.1",
        "fastify-plugin": "^4.5.1",
        "kysely": "0.27.4",
        "pg": "^8.12.0"
    },
    "devDependencies": {
        "@biomejs/biome": "1.8.3",
        "@types/bcrypt": "^5.0.2",
        "@types/node": "^22.5.0",
        "@types/pg": "8.11.8",
        "@types/supertest": "^6.0.2",
        "@vitest/coverage-v8": "2.0.5",
        "@vitest/ui": "2.0.5",
        "kysely-codegen": "0.16.5",
        "kysely-ctl": "0.9.0",
        "npm-run-all": "4.1.5",
        "supertest": "^7.0.0",
        "tsup": "^8.2.4",
        "tsx": "^4.17.1",
        "typescript": "^5.5.4",
        "vite-tsconfig-paths": "5.0.1",
        "vitest": "^2.0.5",
        "zod": "^3.23.8"
    }
}
